<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
<variable
    name="movieCast"
    type="com.example.cinephile.network.CastItem" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds = "true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvEmployee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="1dp"
            android:layout_marginStart="150dp">


<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_cast_image"
        movieDetailImage="@{movieCast.profilePath}"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/movie_cast_actor_name"
        movieTitle="@{movieCast.name}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/movie_cast_image"
        app:layout_constraintStart_toStartOf="@+id/movie_cast_image"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_image" />

    <TextView
        android:id="@+id/movie_cast_actor_movie_name"
        movieTitle="@{movieCast.character}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/movie_cast_actor_name"
        app:layout_constraintStart_toStartOf="@+id/movie_cast_actor_name"
        app:layout_constraintTop_toBottomOf="@+id/movie_cast_actor_name" />


</androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>